!!!
%html
  %head
    %title Psilon
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Sanchez"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
  = render :partial => 'nav'
  #page-wrapper
    - if notice
      %p{ :class => "notice"}= notice
    - if alert
      %p{ :class => "notice error"}= alert
    = yield
